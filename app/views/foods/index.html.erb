<section class="container flex food-placeholder">
  <div class="food flex">
    <%= link_to new_food_path do %>
      <button>Add Food</button>
    <% end %>

    <table>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= food.quantity %></td>
          <td>$<%= food.price %></td>
          <td><%= button_to 'Delete', food_path(food), method: :delete, class: 'delete' %></td>
        <tr>
      <% end %>
    </table>
  </div>
</section>
