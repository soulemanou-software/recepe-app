<div class="flex justify-center mt-48 mb-48 container mx-auto">
  <div class="w-3/5 bg-white shadow-lg pb-10 px-10 pt-5">
      <div class="flex justify-start my-4">
         <%= link_to '<Foods', foods_path, class: 'text-teal-500' %>
         </div>
      <h1 class="text-3xl font-bold border-b-2">Add New Food</h1>
     <div>
      <%= form_with model: @food, url: foods_path, local: true do |form| %>
        <p class="mb-3 mt-5"> 
      <%= form.label :name, class: 'font-semibold pb-1' %><br />
      <%= form.text_field :name, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: 'Food name'%>
        </p>
        <p class="mb-3"> 

      <%= form.label :measurement_unit, class: 'font-semibold pb-1'%><br/>
      <%= form.text_field :measurement_unit, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: 'grams / units'%>
      </p>
        <p class="mb-3">
      <%= form.label :price, class: 'font-semibold pb-1' %><br />
      <%= form.number_field :price, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: 'Price'%>
      </p>
        <p class="mb-3">
      <%= form.label :quantity, class: 'font-semibold pb-1' %><br />
      <%= form.number_field :quantity, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: 'Quantity'%>
      </p>
      <p>
      <%= form.submit class: 'bg-orange-500 py-3 px-10 text-white hover:bg-orange-700 cursor-pointer' %>
    </p>
      <% end %>
      </div>
  </div>
</div>
