<div class="flex justify-center mt-48 mb-48 container mx-auto">
  <div class="w-3/5 bg-white shadow-lg p-10">
<% if @public_recipes.empty?%>
    <div>
        <p>No public recipes yet</p>
    </div>
<%else%>
<div>
<%@public_recipes.each do |public_recipe| %>
    <% sum = 0 %>
    <%= link_to recipe_path(public_recipe.id) do %>
        <div class= "shadow-lg border p-3 flex hover:bg-magenta-200 mb-6">
            
        <div class="w-1/3">
            <p class="text-xl font-semibold"><%= public_recipe.name%></p>
            </div>
        </div>
    <% end %>
<%end%>
</div>
<%end%>