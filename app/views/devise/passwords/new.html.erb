<div class="home flex mb-48 justify-center items-center">
  <div class="flex justify-center my-12 container mx-auto absolute top-0 mt-40">
    <div class="w-1/3 bg-teal shadow-lg p-10 py-10 px-6">
      <h2 class="text-center text-2xl text-teal-500 mb-5">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full border py-2 px-3 mb-4 focus:outline-black-500' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>