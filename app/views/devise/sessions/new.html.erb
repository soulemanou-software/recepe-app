<div class="home flex mb-48 justify-center items-center">
  <div class="flex justify-center my-12 container mx-auto absolute top-0 mt-40">
    <div class="w-1/3 bg-teal shadow-lg p-10 py-10 px-6">
     <h2 class="text-center text-2xl text-teal-500 mb-5">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full border py-2 px-3 mb-4 focus:outline-black-500' %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-lg" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "text-lg", class: 'w-full border py-2 px-3 mb-4 focus:outline-black-500' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: 'mr-1 mb-3' %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'py-2 mb-3 w-full bg-teal-500 text-white hover:bg-teal-600 cursor-pointer' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>